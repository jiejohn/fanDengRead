.bgConfirm {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}
.bgContent {
  width: 107.66vh;
  background-color: #fff;
  height: 63.35vh;
  overflow: hidden;
  border-radius: 3vh;
  padding: 8vh 4vh;
  position: relative;
  background-size: 100%;
}
.bgTitle {
  text-align: center;
  font-size: 6.76vh;
}
.outTit {
  font-size: 5.5vh;
  text-align: center;
  margin-top: 4.6vh;
}
.bottomBtn {
  display: flex;
  margin-top: 6.12vh;
}
.bottomBtn .button {
  color: #fff;
  height: 15.35vh;
  width: 43.04vh;
  border-radius: 7.66vh;
  line-height: 15.35vh;
  font-size: 5.5vh;
}
.loginOut {
  flex: 1;
  background-color: #404040;
}
.cancle {
  flex: 1;
  margin-left: 4vh;
